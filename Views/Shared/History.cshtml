@model TestTask.Models.Order[]
@{
    ViewData["Title"] = "История заказов";
}
<h2>История покупок</h2>
@if (Model.Length >0)
{
    <table>
        <thead><tr><th>Наименование</th><th>Цена</th><th>Адресс доставки</th></tr></thead>
        <tbody>
            @foreach (Order order in Model)
            {
            <tr>
                <td>@order.Phone.Name</td>
                <td>@order.Phone.Price</td>
                <td>@order.Address</td>
            </tr>
                
            }
        </tbody>
    </table>
}
else{<h2>Не было совершенных заказов в последнее время</h2>}
